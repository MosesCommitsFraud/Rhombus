<Window WindowStyle="None" Background="#1A1A1E"
        AllowsTransparency="False" ResizeMode="CanResize"
        BorderThickness="1" BorderBrush="#2B2B30"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Rhombus.App.MainWindow"
        Height="580" Width="900"
        Title="Rhombus">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Bar -->
        <Border Background="#121214"
                Height="25"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                MouseLeftButtonDown="DragWindow"
                Panel.ZIndex="10">
            <TextBlock Text="Rhombus"
                       Foreground="#FFFFFF"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <StackPanel Grid.Column="1" Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Panel.ZIndex="10">
            <Button x:Name="MinButton" Content="_" Click="Min_Click" Width="20" Height="20" Margin="2,2,2,2"/>
            <Button x:Name="MaxButton" Content="◻" Click="Max_Click" Width="20" Height="20" Margin="2,2,2,2"/>
            <Button x:Name="QuitButton" Content="X" Click="Quit_Click" Width="20" Height="20" Margin="2,2,15,2"/>
        </StackPanel>

        <!-- Main Content -->
        <Frame Grid.Row="1" Grid.Column="1"
               x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Panel.ZIndex="10"/>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Grid.Row="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="#121214" Panel.ZIndex="10"/>
        <StackPanel Grid.Column="0" Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Stretch"
                    Panel.ZIndex="10">
            <RadioButton x:Name="SoundboardButton"
                         Content="Soundboard"
                         Click="Soundboard_Click"
                         Width="40" Height="40"
                         Margin="10,10,10,10"
                         GroupName="MenuButtons"
                         Foreground="#FFFFFF"/>
            <RadioButton x:Name="DownloaderButton"
                         Content="Downloader"
                         Click="Downloader_Click"
                         Width="40" Height="40"
                         Margin="10,10,10,10"
                         GroupName="MenuButtons"
                         Foreground="#FFFFFF"/>
        </StackPanel>
            <RadioButton Grid.Row="1"
                         x:Name="OptionsButton"
                         Content="Options"
                         Click="Options_Click"
                         Width="40" Height="40"
                         Margin="10"
                         GroupName="MenuButtons"
                         Foreground="#FFFFFF"
                         VerticalAlignment="Bottom"
                         Panel.ZIndex="10"/>
    </Grid>
</Window>
